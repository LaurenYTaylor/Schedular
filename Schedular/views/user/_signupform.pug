div.container
    h1 #{title}

    p #{error}


    div.wrapper

        form(method='POST', action=action class='center-block')
            div.flex-container-row
                input.signupform(type='username', placeholder = 'Username' name = 'username' value=username)
            div.flex-container-row
                input.signupform(type='email', placeholder = 'Email' name = 'email' value=email)
            div.flex-container-row
                input.signupform(type='password', placeholder = 'Password' name = 'password' value=password)
            div.flex-container-row
                button.btn.submit-btn(type='submit') #{title}
                a(href='/', class='back') Back